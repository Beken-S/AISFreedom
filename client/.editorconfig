root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.{html,css,sass,scss}]
indent_style = space
indent_size = 2
quote_type = double
max_line_length = 120

[*.{js,jsx,ts,tsx,json,}]
indent_style = space
indent_size = 2
quote_type = single
max_line_length = 80
